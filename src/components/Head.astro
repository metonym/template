---
import { SHA } from "@src/constants";
import { ViewTransitions } from "astro:transitions";

const url = new URL(Astro.url.pathname.replace(/\/$/, ""), Astro.site);
const canonical_url = url.href.replace(/\.html$/, "");
---

<link rel="sitemap" href="/sitemap-index.xml" />
<link rel="canonical" href={canonical_url} />

<ViewTransitions transition:animate="none" />

<script async defer define:vars={{ SHA }}>
  console.log("Version", SHA);
</script>
