{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@frontend/*": ["frontend/*"],
      "@components/*": ["frontend/components/*"],
      "@layouts/*": ["frontend/layouts/*"],
    },
  },
}
