{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@client/*": ["client/*"],
      "@components/*": ["client/components/*"],
      "@layouts/*": ["client/layouts/*"],
    },
  },
}
